{% extends "default.njk" %}

{% block content %}

<section class="flex flex-col flex-1 justify-center max-w-5xl mx-auto w-full mt-12 md:flex-row md:justify-start">
  <div class="mx-auto">
    <img class="max-w-sm w-full mx-auto md:mx-0 md:w-auto" src="../../{{ cover }}" />
    <a class="text-3xl block mt-8 underline decoration-sky-600 hover:decoration-4 visited:decoration-purple-500" href="{{ book }}">See on Goodreads &#10230;</a>
  </div>
  <article class="lg:ml-12 md:ml-4 mt-12 md:mt-0">
  <main class="">
    <header class="mb-2">
      <h1 class="text-4xl font-bold">{{ title }}</h1>
      <p class="text-2xl">{{ subheading }}</p>
      <p class="text-xl mt-1">by {{ bookauthor }}{% if recommended === true  %} âš¡{% endif %}</p>
    </header>
      <div class="text-sm mt-5 mb-5">
        <time class="published" datetime="">
          {{ date | readableDate }}
        </time>
      </div>
      <div class="content">
      {{ content | safe }}
      </div>
    </main>
    <aside>
      {% include 'partials/signature.njk' %}
      {% include 'partials/subscribe.njk' %}
    </aside>
  </article>

</section>


{% endblock %}







